{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for XDebug test",
      "type": "php",
      "request": "launch",
      "port": 9000,
      "pathMappings": {
        "/var/www/": "${workspaceFolder}"
      }
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9000,
      "pathMappings": {
        "/var/www/": "${workspaceFolder}"
      }
    }
  ]
}
